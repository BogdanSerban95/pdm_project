<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">


    <ImageView
        android:id="@+id/webImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/web" />

    <TextView
        android:id="@+id/rowSiteNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/webImage"
        android:layout_toStartOf="@+id/deleteSiteButton"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/site_name"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rowInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowSiteNameTextView"
        android:layout_toEndOf="@+id/webImage"
        android:layout_toStartOf="@+id/deleteSiteButton"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/row_info"
        android:textColor="#505050"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/deleteSiteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="#00252159"
        android:src="@drawable/ic_delete_black_36dp" />


</RelativeLayout>