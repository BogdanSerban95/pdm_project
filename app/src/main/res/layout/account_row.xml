<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/justAnImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_lock_outline_black_48dp" />

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/justAnImageView"
        android:layout_toStartOf="@+id/deleteAccountButton"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:weightSum="15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="@string/username"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rowUserTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:textColor="#505050"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayout"
        android:layout_toEndOf="@+id/justAnImageView"
        android:layout_toStartOf="@+id/deleteAccountButton"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:weightSum="15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="@string/email"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/rowEmailTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:textColor="#505050"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/deleteAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="#00252159"
        android:src="@drawable/ic_delete_black_36dp" />
</RelativeLayout>